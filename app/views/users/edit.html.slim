= bootstrap_form_for @user, html: {multipart: true}  do |f|
    .row
      .col-md-6
        = f.text_field(:name, label: t(:enter_your_new_name))
    .row
      .col-md-6
        = f.text_field(:phone_number, label: t(:phone_number))
    .row
      .col-md-12
        - if @user.avatar.present?
          = image_tag @user.avatar.url(:thumb)
    .row
      .col-md-6
        = f.file_field(:avatar, label: t(:add_avatar))
    .row
      .col-md-6
        = submit_tag(t(:edit))
