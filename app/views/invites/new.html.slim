= bootstrap_form_for(@invite) do |f|
  .row
    .col-md-6
      = f.hidden_field :event_id, value: @event_id
  .row
    .col-md-3
      = f.select( :user_id, options_from_collection_for_select(@users, :id, :name),{}, { multiple: 'multiple', size: '10%'})
  .row
    .col-md-2
      = f.submit t(:invite)