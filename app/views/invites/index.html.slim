= form_for @user do |f|
  = f.label @user.name
  = f.label t(:you_are_invited_to_the_following_events)
table.table.table-border
  tr.color1
    th.center = t(:event_name)
    th.center colspan="2" = t(:state)
  - @invite_user.each do |invite|
    tr.color2.center
      td = invite.event.name
      - if invite.state.blank? || invite.state == Invite::DONTANSWERED
        td = link_to t(:accept), invite_path(id: invite.id, state: 1), method: :put
        td = link_to t(:reject), invite_path(id: invite.id, state: 2), method: :put
      - elsif invite.state == Invite::ACCEPT
        td colspan="2" = t(:accept)
      - elsif invite.state == Invite::REJECT
        td colspan="2" = t(:reject)
