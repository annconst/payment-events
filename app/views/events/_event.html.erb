<div class="row">
  <div class="col-md-4" align="center"><%= event.name %></div>
  <div class="col-md-2" align="center"><%= event.date.strftime('%d.%m.%Y') %></div>
  <% if event.user == current_user %>
      <div class="col-md-2" align="center"><%= link_to t(:edit), edit_event_path(event) %></div>
      <div class="col-md-2" align="center"><%= link_to t(:delete), event_path(event), method: :delete, data: { confirm: t(:are_you_sure) }%></div>
  <% end %>
  <div class="col-md-2" align="center"><%= link_to t(:show),  event_path(event) %></div>
</div>