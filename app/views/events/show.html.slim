.row.center-name
  .col-md-3
    b= t(:event_name)
  .col-md-3
    = @event.name
  .col-md-3
    b= t(:event_date)
  .col-md-3
    = @event.date.strftime('%d.%m.%Y')
hr.hr-row
br
table.table.tlook.i
  tr
    th
      .row.center
        .col-md-6
          b= t(:quest)
        .col-md-6
          b= t(:state_invested_money)
  tr
    td
      .row.invites.center
        .col-md-6
          - @event.invites.each do |invite|
            = invite.user.name
            br
        .col-md-6
          - @event.invites.each do |invite|
            = render partial: "invite", object: invite

br
.row.center
  - if @event.user == current_user
    .col-md-7
      b= link_to t(:invite), new_invite_path(event_id: @event.id), class: 'btn btn-primary'
br
.row.right
  .col-md-12
    b= link_to t(:create_list_of_products), new_event_product_list_path(event_id: @event.id), class: 'btn btn btn-primary'
br
- @lists.each do |list|
  = render partial: "list", object: list
  br
.row.right
  .col-md-12
    = submit_tag t(:calculate), :onclick => "calculateAmounts();",  class: 'btn btn btn-primary'
hr.hr-row
.row.center
  .col-md-12
    = link_to t(:event_report), event_event_report_path(event_id: @event.id), class: 'btn btn btn-primary'