<table>
  <th><%= t(:event)%></th><td><%= @event.name %></td>
  <th><%= t(:date)%></th> <td><%= @event.date %></td>
  <tr>
    <th><%= t(:quest)%></th>
    <th><%= t(:state)%></th>
  </tr>
  <tr>
    <td>
      <% for invite in @event.invites %>
          <%= invite.user.name %><br>
      <% end %>
    </td>
    <td>
      <% for invite in @event.invites %>
          <% if invite.state == 0 %>
              <%= label_tag "not answered" %>
              <%= link_to 'Delete', invite, method: :delete, data: { confirm: 'Are you sure?' } %><br>
          <% elsif invite.state == 1 %>
              <%= label_tag "Accept" %><br>
          <% elsif invite.state == 2 %>
              <%= label_tag "Reject" %><br>
          <% end %>
      <% end %>
    </td>
  </tr>
  <tr><td><%= link_to 'Invite', new_invite_path(event_id: @event.id) %></td></tr>
</table>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>